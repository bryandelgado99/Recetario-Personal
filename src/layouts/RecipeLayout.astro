---
import {ChevronLeft} from "@lucide/astro";

export interface Props {
  title: string;
  description?: string;
  prepTime?: string;
  cookTime?: string;
  servings?: number;
  difficulty?: 'Fácil' | 'Intermedio' | 'Difícil';
  image?: string;
  tags?: string[];
}

const { 
  title, 
  description, 
  prepTime, 
  cookTime, 
  servings, 
  difficulty = 'Fácil',
  image,
  tags = []
} = Astro.props;

const totalTime = prepTime && cookTime ? 
  `${parseInt(prepTime) + parseInt(cookTime)} min` : 
  prepTime || cookTime || 'No especificado';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} - Mi Recetario</title>
  <meta name="description" content={description || `Receta de ${title}`}>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <header class="recipe-header">
    <nav>
      <a href="/" class="home-link">
        <ChevronLeft />
          Regresar
        </a>
    </nav>
  </header>

  <main class="recipe-container">
    <article class="recipe">
      <header class="recipe-info">
        <div class="recipe-header-content">
          {image && (
            <div class="recipe-image-header">
              <img src={image} alt={title} />
            </div>
          )}
          
          <div class="recipe-meta">
            <h1 class="recipe-title">{title}</h1>
          
          {description && (
            <p class="recipe-description">{description}</p>
          )}

          <div class="recipe-stats">
            {prepTime && (
              <div class="stat">
                <span class="stat-label">Preparación:</span>
                <span class="stat-value">{prepTime}</span>
              </div>
            )}
            
            {cookTime && (
              <div class="stat">
                <span class="stat-label">Cocción:</span>
                <span class="stat-value">{cookTime}</span>
              </div>
            )}
            
            <div class="stat">
              <span class="stat-label">Total:</span>
              <span class="stat-value">{totalTime}</span>
            </div>
            
            {servings && (
              <div class="stat">
                <span class="stat-label">Porciones:</span>
                <span class="stat-value">{servings}</span>
              </div>
            )}
            
            <div class="stat">
              <span class="stat-label">Dificultad:</span>
              <span class={`stat-value difficulty-${difficulty.toLowerCase()}`}>
                {difficulty}
              </span>
            </div>
          </div>

          {tags.length > 0 && (
            <div class="recipe-tags">
              {tags.map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          )}
          </div>
        </div>
      </header>

      <div class="recipe-content">
        <slot />
      </div>
    </article>
  </main>
</body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: #4a5568;
    background: linear-gradient(135deg, #fef7f0 0%, #f7fafc 100%);
    min-height: 100vh;
  }

  .recipe-header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid #f1c2a7;
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .recipe-header nav {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .home-link {
    color: #8b7355;
    text-decoration: none;
    font-weight: 500;
    font-family: 'Poppins', sans-serif;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .home-link:hover {
    color: #d4a574;
    transform: translateX(-2px);
  }

  .recipe-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .recipe {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(212, 165, 116, 0.15);
    overflow: hidden;
    border: 1px solid rgba(241, 194, 167, 0.3);
  }

  .recipe-info {
    padding: 2.5rem;
  }

  .recipe-header-content {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
  }

  .recipe-image-header {
    flex-shrink: 0;
    width: 200px;
  }

  .recipe-image-header img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(212, 165, 116, 0.2);
  }

  .recipe-meta {
    flex: 1;
  }

  .recipe-title {
    font-family: 'Poppins', sans-serif;
    font-size: 2.5rem;
    font-weight: 600;
    color: #8b7355;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .recipe-description {
    font-size: 1.1rem;
    color: #718096;
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .recipe-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 1rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, #fef7f0 0%, #f9f2e7 100%);
    border-radius: 16px;
    border: 1px solid rgba(241, 194, 167, 0.3);
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .stat-label {
    font-size: 0.9rem;
    color: #8b7355;
    font-weight: 500;
    margin-bottom: 0.25rem;
    font-family: 'Poppins', sans-serif;
  }

  .stat-value {
    font-size: 1.1rem;
    font-weight: 600;
    color: #6b5b73;
  }

  .difficulty-fácil {
    color: #9ae6b4;
  }

  .difficulty-intermedio {
    color: #f6ad55;
  }

  .difficulty-difícil {
    color: #fc8181;
  }

  .recipe-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: linear-gradient(135deg, #d4a574 0%, #c49363 100%);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 25px;
    font-size: 0.85rem;
    font-weight: 500;
    font-family: 'Poppins', sans-serif;
    box-shadow: 0 2px 8px rgba(212, 165, 116, 0.3);
  }

  .recipe-content {
    padding: 0 2rem 2rem;
  }

  @media (max-width: 768px) {
    .recipe-container {
      padding: 1rem;
    }

    .recipe-info {
      padding: 1.5rem;
    }

    .recipe-header-content {
      flex-direction: column;
      gap: 1.5rem;
    }

    .recipe-image-header {
      width: 100%;
      align-self: center;
    }

    .recipe-image-header img {
      height: 250px;
    }

    .recipe-title {
      font-size: 2rem;
    }

    .recipe-stats {
      grid-template-columns: repeat(2, 1fr);
      padding: 1rem;
    }

    .recipe-content {
      padding: 0 1.5rem 1.5rem;
    }
  }
</style>