---
export interface Props {
  title: string;
  description?: string;
  difficulty?: 'B√°sico' | 'Intermedio' | 'Avanzado';
  category?: string;
  image?: string;
  tags?: string[];
  relatedRecipes?: string[];
}

const { 
  title, 
  description, 
  difficulty = 'B√°sico',
  category = 'General',
  image,
  tags = [],
  relatedRecipes = []
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} - T√©cnicas y Consejos</title>
  <meta name="description" content={description || `Gu√≠a sobre ${title}`}>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
  <header class="technique-header">
    <nav class="breadcrumb-nav">
      <div class="container">
        <a href="/" class="home-link">üè† Inicio</a>
        <span class="separator">‚Üí</span>
        <a href="/tecnicas" class="section-link">üìö T√©cnicas</a>
        <span class="separator">‚Üí</span>
        <span class="current">{title}</span>
      </div>
    </nav>
  </header>

  <main class="technique-container">
    <article class="technique">
      <header class="technique-info">
        <div class="technique-header-content">
          {image && (
            <div class="technique-image-header">
              <img src={image} alt={title} />
            </div>
          )}
          
          <div class="technique-meta">
            <div class="technique-category">{category}</div>
            <h1 class="technique-title">{title}</h1>
            
            {description && (
              <p class="technique-description">{description}</p>
            )}

            <div class="technique-stats">
              <div class="stat">
                <span class="stat-label">Dificultad:</span>
                <span class={`stat-value difficulty-${difficulty.toLowerCase()}`}>
                  {difficulty}
                </span>
              </div>
            </div>

            {tags.length > 0 && (
              <div class="technique-tags">
                {tags.map(tag => (
                  <span class="tag">{tag}</span>
                ))}
              </div>
            )}
          </div>
        </div>
      </header>

      <div class="technique-content">
        <slot />
      </div>

      {relatedRecipes.length > 0 && (
        <footer class="related-section">
          <h2 class="related-title">üç≥ Recetas que usan esta t√©cnica</h2>
          <div class="related-links">
            {relatedRecipes.map(recipe => (
              <a href={`/recetas/${recipe}`} class="related-link">
                {recipe.replace(/-/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}
              </a>
            ))}
          </div>
        </footer>
      )}
    </article>
  </main>
</body>
</html>

<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: 'Nunito', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: #4a5568;
    background: linear-gradient(135deg, #fef7f0 0%, #f7fafc 100%);
    min-height: 100vh;
  }

  .technique-header {
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(159, 122, 234, 0.2);
    padding: 1rem 0;
    position: sticky;
    top: 0;
    z-index: 100;
  }

  .breadcrumb-nav {
    font-size: 0.9rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .breadcrumb-nav a {
    color: #6b46c1;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .breadcrumb-nav a:hover {
    color: #9f7aea;
  }

  .separator {
    margin: 0 0.5rem;
    color: #a0aec0;
  }

  .current {
    color: #718096;
    font-weight: 500;
  }

  .technique-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem;
  }

  .technique {
    background: rgba(255, 255, 255, 0.9);
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(159, 122, 234, 0.15);
    overflow: hidden;
    border: 1px solid rgba(159, 122, 234, 0.2);
  }

  .technique-info {
    padding: 2.5rem;
  }

  .technique-header-content {
    display: flex;
    align-items: flex-start;
    gap: 2rem;
  }

  .technique-image-header {
    flex-shrink: 0;
    width: 200px;
  }

  .technique-image-header img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 16px;
    box-shadow: 0 8px 20px rgba(159, 122, 234, 0.2);
  }

  .technique-meta {
    flex: 1;
  }

  .technique-category {
    display: inline-block;
    background: linear-gradient(135deg, #9f7aea 0%, #805ad5 100%);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 500;
    font-family: 'Poppins', sans-serif;
    margin-bottom: 1rem;
  }

  .technique-title {
    font-family: 'Poppins', sans-serif;
    font-size: 2.5rem;
    font-weight: 600;
    color: #6b46c1;
    margin-bottom: 1rem;
    line-height: 1.2;
  }

  .technique-description {
    font-size: 1.1rem;
    color: #718096;
    margin-bottom: 2rem;
    line-height: 1.7;
  }

  .technique-stats {
    display: flex;
    gap: 2rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
    border-radius: 16px;
    border: 1px solid rgba(159, 122, 234, 0.1);
  }

  .stat {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .stat-label {
    font-size: 0.9rem;
    color: #6b46c1;
    font-weight: 500;
    margin-bottom: 0.25rem;
    font-family: 'Poppins', sans-serif;
  }

  .stat-value {
    font-size: 1.1rem;
    font-weight: 600;
    color: #4a5568;
  }

  .difficulty-b√°sico {
    color: #9ae6b4;
  }

  .difficulty-intermedio {
    color: #f6ad55;
  }

  .difficulty-avanzado {
    color: #fc8181;
  }

  .technique-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .tag {
    background: linear-gradient(135deg, #9f7aea 0%, #805ad5 100%);
    color: white;
    padding: 0.4rem 1rem;
    border-radius: 25px;
    font-size: 0.85rem;
    font-weight: 500;
    font-family: 'Poppins', sans-serif;
    box-shadow: 0 2px 8px rgba(159, 122, 234, 0.3);
  }

  .technique-content {
    padding: 0 2.5rem 2.5rem;
  }

  .technique-content :global(h2) {
    font-family: 'Poppins', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #6b46c1;
    margin: 2rem 0 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #9f7aea;
  }

  .technique-content :global(h3) {
    font-family: 'Poppins', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #6b46c1;
    margin: 1.5rem 0 0.75rem;
  }

  .technique-content :global(p) {
    margin-bottom: 1rem;
    line-height: 1.7;
    color: #4a5568;
  }

  .technique-content :global(ul),
  .technique-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }

  .technique-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .technique-content :global(blockquote) {
    border-left: 4px solid #9f7aea;
    padding: 1rem;
    margin: 1.5rem 0;
    background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
    border-radius: 0 12px 12px 0;
    font-style: italic;
    color: #6b46c1;
  }

  .technique-content :global(strong) {
    font-weight: 600;
    color: #6b46c1;
  }

  .related-section {
    background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
    padding: 2rem 2.5rem;
    border-top: 1px solid rgba(159, 122, 234, 0.2);
  }

  .related-title {
    font-family: 'Poppins', sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: #6b46c1;
    margin-bottom: 1rem;
  }

  .related-links {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
  }

  .related-link {
    background: linear-gradient(135deg, #9f7aea 0%, #805ad5 100%);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 25px;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    font-family: 'Poppins', sans-serif;
    transition: all 0.3s ease;
    box-shadow: 0 2px 8px rgba(159, 122, 234, 0.3);
  }

  .related-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(159, 122, 234, 0.4);
  }

  @media (max-width: 768px) {
    .technique-container {
      padding: 1rem;
    }

    .technique-info {
      padding: 1.5rem;
    }

    .technique-header-content {
      flex-direction: column;
      gap: 1.5rem;
    }

    .technique-image-header {
      width: 100%;
      align-self: center;
    }

    .technique-image-header img {
      height: 250px;
    }

    .technique-title {
      font-size: 2rem;
    }

    .technique-stats {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .technique-content {
      padding: 0 1.5rem 1.5rem;
    }

    .related-section {
      padding: 1.5rem;
    }
  }
</style>