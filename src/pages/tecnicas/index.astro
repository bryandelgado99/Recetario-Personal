// Obtener todas las t√©cnicas desde los archivos markdown
const allTechniques = await Astro.glob('./*.md');

// Procesar las t√©cnicas para extraer la informaci√≥n necesaria
const techniques = allTechniques
  .map(technique => {
    const { frontmatter, url } = technique;
    
    return {
      title: frontmatter.title,
      description: frontmatter.description,
      url: url,
      category: frontmatter.category || 'General',
      difficulty: frontmatter.difficulty || 'B√°sico',
      tags: frontmatter.tags || [],
      image: frontmatter.image ? `/images/${frontmatter.image}` : null
    };
  })
  .sort((a, b) => a.title.localeCompare(b.title)); // Ordenar alfab√©ticamente

// Agrupar por categor√≠as
const categories = techniques.reduce((acc, technique) => {
  if (!acc[technique.category]) {
    acc[technique.category] = [];
  }
  acc[technique.category].push(technique);
  return acc;
}, {} as Record<string, typeof techniques>);
