// Obtener todas las recetas desde los archivos markdown
const allRecipes = await Astro.glob("./recetas/*.md");

// Procesar las recetas para extraer la informaci√≥n necesaria
const recipes = allRecipes
  .map((recipe) => {
    const { frontmatter, url } = recipe;
    const totalTime =
      frontmatter.prepTime && frontmatter.cookTime
        ? `${parseInt(frontmatter.prepTime) + parseInt(frontmatter.cookTime)} min`
        : frontmatter.prepTime || frontmatter.cookTime || "No especificado";

    // Procesar la imagen - usar ruta desde public/images/
    let processedImage = frontmatter.image;
    if (
      frontmatter.image &&
      typeof frontmatter.image === "string" &&
      !frontmatter.image.startsWith("http")
    ) {
      // Si no es una URL externa, asumir que est√° en public/images/
      processedImage = `/images/${frontmatter.image}`;
    }

    return {
      title: frontmatter.title,
      description: frontmatter.description,
      url: url,
      difficulty: frontmatter.difficulty || "No especificado",
      time: totalTime,
      tags: frontmatter.tags || [],
      prepTime: frontmatter.prepTime,
      cookTime: frontmatter.cookTime,
      servings: frontmatter.servings,
      image: processedImage,
    };
  })
  .sort((a, b) => a.title.localeCompare(b.title)); // Ordenar alfab√©ticamente
