---
export interface Props {
  notes: string[];
  title?: string;
  type?: 'tip' | 'warning' | 'info';
}

const { notes, title = "Notas y consejos", type = 'tip' } = Astro.props;
---

<section class="notes-section">
  <h2 class="section-title">{title}</h2>
  <div class={`notes-container notes-${type}`}>
    {notes.map(note => (
      <div class="note-compose-item">
        <span class="note-item"></span>
        <p class="note-text">{note}</p>
      </div>
    ))}
  </div>
</section>

<style>
  .notes-section {
    margin-bottom: 2rem;
  }

  .section-title {
    font-family: 'Poppins', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #8b7355;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #d4a574;
  }

  .notes-container {
    border-radius: 8px;
    padding: 1.5rem;
    position: relative;
  }

  .note-compose-item{
    display: inline-flex;
  }

  .notes-tip {
    background: linear-gradient(135deg, #f0fff4 0%, #e6fffa 100%);
    border-left: 4px solid #9ae6b4;
  }

  .notes-warning {
    background: linear-gradient(135deg, #fffbeb 0%, #fef3c7 100%);
    border-left: 4px solid #f6ad55;
  }

  .notes-info {
    background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);
    border-left: 4px solid #93c5fd;
  }

  .note-item {
    margin-bottom: 1rem;
  }

  .note-item:last-child {
    margin-bottom: 0;
  }

  .note-text {
    font-size: 0.95rem;
    color: #4a5568;
    line-height: 1.6;
    margin: 0;
  }

  .notes-tip .note-item::before {
    content: "üí° ";
    margin-right: 0.5rem;
  }

  .notes-warning .note-item::before {
    content: "‚ö†Ô∏è ";
    margin-right: 0.5rem;
  }

  .notes-info .note-item::before {
    content: "‚ÑπÔ∏è ";
    margin-right: 0.5rem;
  }

  @media (max-width: 768px) {
    .notes-container {
      padding: 1rem;
    }
  }
</style>