---
export interface Props {
  steps: string[] | any;
  title?: string;
}

const { steps, title = "Preparaci칩n" } = Astro.props;

// Funci칩n para determinar si los pasos est치n agrupados por secciones
const isGrouped = steps && typeof steps === 'object' && !Array.isArray(steps);

// Funci칩n simple para procesar enlaces Markdown
function processMarkdown(text: string): string {
  // Procesar enlaces [texto](url)
  return text.replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2">$1</a>');
}
---

<section class="steps-section">
  <h2 class="section-title">{title}</h2>
  
  {isGrouped ? (
    <!-- Pasos agrupados por secciones -->
    <div class="steps-groups">
      {Object.entries(steps).map(([sectionName, sectionSteps]) => {
        let stepCounter = 0;
        return (
          <div class="step-group">
            <h3 class="group-title">{sectionName}</h3>
            <ol class="steps-list">
              {(sectionSteps as string[]).filter((step: string) => step && step.trim() !== '').map((step: string) => {
                stepCounter++;
                return (
                  <li class="step-item">
                    <div class="step-number">{stepCounter}</div>
                    <div class="step-content">
                      <p class="step-text" set:html={processMarkdown(step)}></p>
                    </div>
                  </li>
                );
              })}
            </ol>
          </div>
        );
      })}
    </div>
  ) : (
    <!-- Lista simple de pasos -->
    <ol class="steps-list">
      {steps.map((step: string, index: number) => (
        <li class="step-item">
          <div class="step-number">{index + 1}</div>
          <div class="step-content">
            <p class="step-text" set:html={processMarkdown(step)}></p>
          </div>
        </li>
      ))}
    </ol>
  )}
</section>

<style>
  .steps-section {
    margin-bottom: 2rem;
  }

  .section-title {
    font-family: 'Poppins', sans-serif;
    font-size: 1.5rem;
    font-weight: 600;
    color: #8b7355;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #d4a574;
  }

  .steps-groups {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .step-group {
    background: linear-gradient(135deg, #fefefe 0%, #f8f9fa 100%);
    border-radius: 16px;
    padding: 1.5rem;
    border: 1px solid rgba(212, 165, 116, 0.2);
  }

  .group-title {
    font-family: 'Poppins', sans-serif;
    font-size: 1.2rem;
    font-weight: 600;
    color: #8b7355;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid rgba(212, 165, 116, 0.3);
  }

  .steps-list {
    list-style: none;
    counter-reset: step-counter;
  }

  .step-group .steps-list {
    margin: 0;
  }

  .step-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 1.5rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 16px;
    box-shadow: 0 4px 12px rgba(212, 165, 116, 0.15);
    border-left: 4px solid #d4a574;
  }

  .step-number {
    flex-shrink: 0;
    width: 2.5rem;
    height: 2.5rem;
    background: linear-gradient(135deg, #d4a574 0%, #c49363 100%);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1.1rem;
    margin-right: 1rem;
    font-family: 'Poppins', sans-serif;
    box-shadow: 0 2px 8px rgba(212, 165, 116, 0.3);
  }

  .step-content {
    flex: 1;
  }

  .step-text {
    font-size: 1rem;
    color: #4a5568;
    line-height: 1.6;
    margin: 0;
  }

  .step-text :global(a) {
    color: #d4a574;
    text-decoration: none;
    font-weight: 500;
    border-bottom: 1px solid transparent;
    transition: all 0.2s ease;
  }

  .step-text :global(a:hover) {
    color: #c49363;
    border-bottom-color: #c49363;
  }

  .step-text :global(strong) {
    font-weight: 600;
    color: #2d3748;
  }

  .step-text :global(em) {
    font-style: italic;
    color: #4a5568;
  }

  .step-text :global(code) {
    background: #f7fafc;
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-family: 'Courier New', monospace;
    font-size: 0.9rem;
    color: #2d3748;
  }

  @media (max-width: 768px) {
    .step-item {
      padding: 1rem;
      margin-bottom: 1rem;
    }

    .step-number {
      width: 2rem;
      height: 2rem;
      font-size: 1rem;
      margin-right: 0.75rem;
    }

    .step-group {
      padding: 1rem;
    }

    .steps-groups {
      gap: 1.5rem;
    }
  }
</style>